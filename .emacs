;; Hiding menu-bar, tool-bar and scroll-bar
(scroll-bar-mode -1) ; hide scroll-bar
(tool-bar-mode -1)   ; hide tool-bar
(menu-bar-mode -1)   ; hide menu-bar

;; Hiding welcome screen
(setq inhibit-startup-screen t)

;; Stopping cursor blinking
(blink-cursor-mode 0)

;; Display line numbers
(global-linum-mode 1)

;; Highlight matching parenthesis
(show-paren-mode 1)

;; Disable backup copy creating
(setq make-backup-files nil)

;; Wrapping the word
(global-visual-line-mode t)

;; Turn off terminal bell
(setq visible-bell 1)

;; Adding Melpa to .emacs
(require 'package)
(add-to-list 'package-archives
             '("melpa-stable" . "https://stable.melpa.org/packages/"))

;; Auto close bracket insertion
(electric-pair-mode 1)

;; Switching between buffers made easily
(ido-mode 1)

;; Show cursor position within line
(column-number-mode 1)

;; Tabs to be intended with 4 spaces
(setq-default indent-tabs-mode nil)
(setq-default tab-width 4)
(setq indent-line-function 'insert-tab)


